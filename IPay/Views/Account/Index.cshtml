<table class="table table-hover">
    
@{
       
        foreach (var item in Model)
    {
        if (item.Debit>0)
        {
            <tr class="alert alert-danger">
                    <td>@item.dateTime</td>
                    <td> - @item.Debit</td>
            </tr>
                }
                else
                {
                    <tr class="alert alert-success">
                    <td>@item.dateTime</td>
                    <td> + @item.Credit</td>
                    </tr>
                }
            }
}
