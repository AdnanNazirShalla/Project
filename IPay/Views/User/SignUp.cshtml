@using Model
@model Model.UserRequest

@{
    ViewData["Title"] = "SignUp";
}

@{
    if (ViewBag.Message != null)
    {
        if (ViewBag.Message > 0)
        {
            <div class="alert alert-success">Account Created Successfully</div>
        }
        else
        {
            <div class="alert alert-danger">Email Already Registered</div>
        }
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<style>
    .lb {
        font-size: 28px;
        font-size: 1.7rem;
        font-weight: 300;
    }

    .col1 {
        margin: auto;
    }

    h1, h4 {
        text-align: center;
    }

    lin {
        font-size: 1.7rem;
        padding: 1rem 1.5rem;
        border: 1px solid #ddd;
        border-radius: 0.5rem;
    }

    select#Gender {
        background-color: aliceblue;
        padding: .5rem;
        border-radius: 6px;
        font-weight: 300;
    }

    .list {
        margin: auto;
        text-align: center;
    }
    .row1 {
        background: rgb(34,193,195);
        background: linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(253,187,45,1) 100%);
        border-radius:4px;
    }
    input.btn.btn-primary.lb {
        background-color: darkcyan;
    }
</style>
<h1>SignUp</h1>

<div class="row row1">
    <div class="col-md-4 col1">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@


            <div class="form-group">
                <label asp-for="Name" class="control-label lb"></label>
                <input asp-for="Name" class="form-control lin" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label lb"></label>
                <input asp-for="Email" class="form-control lin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label lb"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">Select Gender</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="_password" class="control-label lb"></label>
                <input asp-for="_password" class="form-control lin" />
                <span asp-validation-for="_password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_confirmPassword" class="control-label lb "></label>
                <input asp-for="_confirmPassword" class="form-control lin" />
                <span asp-validation-for="_confirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="_pin" class="control-label lb"></label>
                <input asp-for="_pin" class="form-control lin" />
                <span asp-validation-for="_pin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary lb" />
            </div>

        </form>

</div>



